<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddTrackActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/abc_ic_ab_back_material"
        app:title="Добавить новый трек" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Основная информация"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/et_track_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Название трека"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Исполнитель"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_cover_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL обложки"
                android:minHeight="48dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/et_audio_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL аудиофайла"
                android:minHeight="48dp"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/btn_add_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Добавить трек" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>