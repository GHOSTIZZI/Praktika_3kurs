<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@color/light_background"
    tools:context=".activity.PlayerActivity">

    <ImageView
        android:id="@+id/player_album_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_note"
        android:contentDescription="Обложка альбома" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/player_btn_favorite">

            <TextView
                android:id="@+id/player_song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text_and_icons"
                tools:text="Название Песни" />

            <TextView
                android:id="@+id/player_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/medium_text"
                tools:text="Исполнитель" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/player_btn_favorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="@color/dark_text_and_icons"
            android:src="@drawable/ic_favorite_border"
            android:contentDescription="Добавить в избранное" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/player_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/medium_text"
            android:text="0:00" />

        <SeekBar
            android:id="@+id/player_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            />

        <TextView
            android:id="@+id/player_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/medium_text"
            android:text="0:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/player_btn_previous"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_previous"
            app:tint="@color/dark_text_and_icons"
            android:contentDescription="Предыдущий трек" />

        <ImageButton
            android:id="@+id/player_btn_play_pause"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginHorizontal="24dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_arrow"
            app:tint="@color/dark_text_and_icons"
            android:contentDescription="Играть/Пауза" />

        <ImageButton
            android:id="@+id/player_btn_next"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_skip_next"
            app:tint="@color/dark_text_and_icons"
            android:contentDescription="Следующий трек" />
    </LinearLayout>

</LinearLayout>